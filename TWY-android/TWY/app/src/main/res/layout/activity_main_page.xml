<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="twy"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.twy.Main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1" />

            <TextView
                android:text="Главная"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MainPageLogo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Задачи"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/main_tasks_button"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/TaskColor" />

            <Button
                android:text="Журнал успехов"
                android:layout_height="match_parent"
                android:id="@+id/main_journal_button"
                android:layout_weight="2"
                android:layout_width="85dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/JournalColor" />

            <Button
                android:text="Календарь"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/main_calendar_button"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/CalendarColor" />
        </LinearLayout>

        <TextView
            android:text="Новости"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_news_text" />

    </LinearLayout>

</RelativeLayout>
